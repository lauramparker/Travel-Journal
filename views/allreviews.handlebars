<div style="background: url('/public/img/4.jpg')" class="page-holder bg-cover" loading="lazy">
    <nav class="navbar navbar-expand-lg navbar-dark;">
        <a class="navbar-brand" href="/main.html">
            <img src="/public/img/airplane-4-24.png" height="30" width="auto" alt="" loading="lazy">
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link text-white" href="/reviews">All Reviews <span
                            class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-white" href="/search.html">Search</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link text-white" href="/write_review.html">Write</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row my-4 ml-1 justify-content-center">
            <h1>ALL REVIEWS</h1>
        </div>

        <div class="reviews row">
            {{#each review}}
            <div class="col-4 mb-5">
                <div class="card mx-auto float-left overflow-auto shadow bg-white rounded opacity-2"
                    style="width: 18rem; height: 250px">
                    <div class="card-body">
                        <h4 class="card-title">{{this.dataValues.id}}: {{this.dataValues.city_name}}</h4>
                        <p class="card-text">{{this.dataValues.city_review}}</p>
                        <hr>
                        {{#if this.dataValues.hotel_name}}
                        <h6 class="card-subtitle mb-2 text-muted">Hotel:</h6>
                        <h5 class="hotel-name">{{this.dataValues.hotel_name}}</h5>
                        <p class="hotel-review">{{this.dataValues.hotel_review}}</p>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>